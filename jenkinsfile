pipeline {
    agent {
        label 'SLAVE'
    }
    stages {
        stage('seeing compile code') {
            steps{
                sh '''
                mvn compile
                '''
            }
        }
        stage('package code') {
            steps {
                sh '''
                mvn package
                '''
            }
        }
        stage('seeing artifacts') {
            steps {
                sh '''
                cd target/*.jar surefire-reports users.jar
                zip -r users.zip  user.jar*
                '''
            }
        }
    }
}